FROM mcr.microsoft.com/dotnet/sdk:7.0
LABEL author="khaja" oraganization="qt" project="learning"
ADD https://github.com/nopSolutions/nopCommerce/releases/download/release-4.60.4/nopCommerce_4.60.4_NoSource_linux_x64.zip /nop
WORKDIR /nop
RUN apt update && apt install unzip -y && \
    unzip nopCommerce_4.60.4_NoSource_linux_x64.zip && \
    mkdir /nop/bin && mkdir /nop/logs
EXPOSE 5000
WORKDIR /nop
CMD [ "dotnet", "Nop.Web.dll", "--urls", "http://0.0.0.0:5000"]
